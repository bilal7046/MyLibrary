@page "/login"
<PageTitle>Login</PageTitle>
<div class="d-flex align-items-center justify-content-center" style="min-height:100vh; padding:2rem;">
    <div class="card p-4" style="max-width:420px; width:100%; border-radius:14px;">
        <div class="text-center mb-3">
            <div class="brand" style="font-size:1.25rem; color:var(--primary-600)">📚 MyLibrary</div>
            <p class="text-muted small">Manage books, borrowers and reports</p>
        </div>
        <form id="loginForm">
            <div class="mb-3"><label class="form-label">Email</label><input class="form-control" type="email" id="email"></div>
            <div class="mb-3"><label class="form-label">Password</label><input class="form-control" type="password" id="password"></div>
            <div class="d-grid"><button class="btn btn-primary">Sign in</button></div>
        </form>
        <div class="text-center mt-3 small">Don't have an account? <a href="register.html">Create one</a></div>
    </div>
</div>