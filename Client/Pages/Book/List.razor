@page "/books"
<PageTitle>Books</PageTitle>
<div class="card p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="mb-0">Books Catalog</h6>

    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:5%">#</th>
                    <th>Cover</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th style="width:14%">Status</th>
                    <th style="width:18%">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td><img src="assets/img/covers/gatsby.jpg" style="width:48px; height:64px; object-fit:cover; border-radius:6px;"></td>
                    <td>The Great Gatsby</td>
                    <td>F. Scott Fitzgerald</td>
                    <td>Classic</td>
                    <td><span class="badge bg-success">Available</span></td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="edit-book.html">Edit</a>
                        <button class="btn btn-sm btn-outline-danger btn-delete">Delete</button>
                        <a class="btn btn-sm btn-outline-success" href="borrow.html">Borrow</a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td><img src="assets/img/covers/1984.jpg" style="width:48px; height:64px; object-fit:cover; border-radius:6px;"></td>
                    <td>1984</td>
                    <td>George Orwell</td>
                    <td>Dystopia</td>
                    <td><span class="badge bg-danger">Borrowed</span></td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="edit-book.html">Edit</a>
                        <button class="btn btn-sm btn-outline-danger btn-delete">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>