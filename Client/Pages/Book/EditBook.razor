@page "/book/edit-book"
<PageTitle>Edit Book</PageTitle>
<div class="card p-4">
    <h5 class="mb-3">Edit Book Details</h5>
    <form id="editBookForm">
        <div class="row g-3">
            <div class="col-md-8">
                <div class="mb-3"><label class="form-label">Title</label><input class="form-control" id="title" value="The Great Gatsby"></div>
                <div class="mb-3"><label class="form-label">Author</label><input class="form-control" id="author" value="F. Scott Fitzgerald"></div>
                <div class="mb-3"><label class="form-label">Category</label><input class="form-control" id="category" value="Classic"></div>
                <div class="mb-3"><label class="form-label">Description</label><textarea class="form-control" rows="4" id="desc">A classic novel...</textarea></div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Update Book</button>
                    <a href="books.html" class="btn btn-ghost">Cancel</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="mb-2 text-muted small">Book Cover</div>
                    <img id="coverPreviewEdit" src="assets/img/covers/gatsby.jpg" alt="cover" style="width:140px; height:190px; object-fit:cover; border-radius:8px; box-shadow:0 8px 24px rgba(2,6,23,0.06);">
                    <div class="mt-3">
                        <input class="form-control form-control-sm" type="file" id="coverInputEdit" accept="image/*">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>