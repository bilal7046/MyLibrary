@page "/"
<PageTitle>Dashboard</PageTitle>
<div class="row g-4">
    <div class="col-12 col-lg-8">
        <div class="card p-4 card-hero">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h3 class="mb-1">Library Overview</h3>
                    <p class="text-muted">Quick stats and recent activity</p>
                    <div class="d-flex gap-3 mt-3">
                        <div class="p-3 bg-white rounded-3 border text-center" style="min-width:120px;">
                            <div class="text-muted small">Total Books</div>
                            <div class="fs-4 fw-bold">1,245</div>
                        </div>
                        <div class="p-3 bg-white rounded-3 border text-center" style="min-width:120px;">
                            <div class="text-muted small">Borrowed</div>
                            <div class="fs-4 fw-bold text-danger">112</div>
                        </div>
                    </div>
                </div>
                <div style="min-width:180px;">
                    <img src="assets/img/library-hero.svg" alt="hero" style="width:160px; opacity:0.95;">
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4">
        <div class="card p-3">
            <h6 class="mb-2">Quick Actions</h6>
            <div class="d-grid gap-2">
                <a href="add-book.html" class="btn btn-primary">Add New Book</a>
                <a href="books.html" class="btn btn-outline-secondary">Manage Books</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card p-3">
            <h6 class="mb-3">Recent Borrowed</h6>
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr><th>Book</th><th>Borrower</th><th>Date</th><th>Due</th></tr>
                    </thead>
                    <tbody>
                        <tr><td>The Great Gatsby</td><td>John Doe</td><td>2025-10-01</td><td>2025-10-15</td></tr>
                        <tr><td>1984</td><td>Jane Smith</td><td>2025-09-25</td><td>2025-10-09</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
